# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/tfrm
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-me-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Environment
APP_ENV=development
# Comma-separated list of allowed origins (leave empty to use CORS_ALLOW_ALL_IN_DEV)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://8.153.109.226
CORS_ALLOW_ALL_IN_DEV=true

# LLM Provider Configuration
# Choose one: kimi | deepseek | gemini | openai
LLM_PROVIDER=kimi

# Kimi API (Moonshot AI)
KIMI_API_KEY=your-kimi-api-key-here
KIMI_MODEL=kimi-k2.5

# DeepSeek API (Optional)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat

# Gemini API (Optional)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# Optional: Object Storage (OSS/S3)
# STORAGE_PROVIDER=oss
# OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your-access-key-id
# OSS_ACCESS_KEY_SECRET=your-access-key-secret
# OSS_BUCKET_NAME=your-bucket-name
