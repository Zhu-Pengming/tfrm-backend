.skus-container {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 120rpx;
}

.header-section {
  background: #ffffff;
  padding: 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.header-top {
  padding: 24rpx 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F1F5F9;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #0F172A;
}

.search-icon {
  font-size: 32rpx;
  margin-left: 16rpx;
  opacity: 0.5;
}

.library-tabs {
  display: flex;
  background: #F1F5F9;
  padding: 12rpx;
  margin: 0 30rpx 24rpx;
  border-radius: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #64748B;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #2563EB;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.08);
}

.category-filter {
  margin-bottom: 20rpx;
  background: #ffffff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
  display: flex;
  gap: 12rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  background: #F8FAFC;
  transition: all 0.3s;
  min-width: 100rpx;
}

.category-item.active {
  background: #EFF6FF;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.1);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}

.category-label {
  font-size: 20rpx;
  font-weight: bold;
  color: #334155;
  text-align: center;
}

.category-item.active .category-label {
  color: #2563EB;
}

.basket-float {
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.basket-icon {
  font-size: 40rpx;
}

.basket-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 40rpx;
  height: 40rpx;
  background: #ff4444;
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.sku-list {
  padding: 0 30rpx 30rpx;
}

.sku-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.04);
  border: 2rpx solid #F1F5F9;
  transition: all 0.3s;
}

.sku-card:active {
  border-color: #E2E8F0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #F8FAFC;
  border-bottom: 2rpx solid #F1F5F9;
}

.sku-provider {
  font-size: 22rpx;
  color: #64748B;
  font-weight: 500;
}

.card-body {
  padding: 24rpx;
}

.sku-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.sku-type-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
}

.type-hotel {
  background: #2563EB;
}

.type-car {
  background: #D1FAE5;
  color: #059669;
}

.type-ticket {
  background: #FEF3C7;
  color: #D97706;
}

.type-guide {
  background: #E9D5FF;
  color: #7C3AED;
}

.type-restaurant {
  background: #FECACA;
  color: #DC2626;
}

.type-activity {
  background: #FED7AA;
  color: #EA580C;
}

.type-itinerary {
  background: #E0E7FF;
  color: #4F46E5;
}

.sku-location {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.location-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.location-text {
  font-size: 22rpx;
  color: #64748B;
}

.sku-pricing {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
}

.price-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.price-label {
  font-size: 20rpx;
  color: #94A3B8;
  font-weight: 500;
}

.price-value {
  font-size: 26rpx;
  font-weight: 700;
}

.price-value.cost {
  color: #64748B;
}

.price-value.sales {
  color: #2563EB;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 2rpx solid #F1F5F9;
}

.sku-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
}

.tag {
  padding: 4rpx 12rpx;
  background: #F1F5F9;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #64748B;
  font-weight: 500;
}

.card-actions {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.btn-action {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s;
}

.btn-edit {
  background: #F1F5F9;
  color: #475569;
}

.btn-edit:active {
  background: #E2E8F0;
}

.btn-delete {
  background: #FEE2E2;
  color: #DC2626;
}

.btn-delete:active {
  background: #FECACA;
}

.btn-add {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.25);
  transition: all 0.3s;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

.btn-add:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.25);
}
