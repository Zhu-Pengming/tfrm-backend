.skus-container {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 120rpx;
}

.header-section {
  background: #ffffff;
  padding: 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.header-top {
  padding: 24rpx 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.view-mode-toggle {
  display: flex;
  background: #F1F5F9;
  border-radius: 16rpx;
  padding: 6rpx;
  gap: 6rpx;
}

.mode-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.mode-btn.active {
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.1);
}

.mode-icon {
  font-size: 32rpx;
  color: #64748B;
}

.mode-btn.active .mode-icon {
  color: #2563EB;
}

.batch-btn {
  width: 56rpx;
  height: 56rpx;
  background: #F1F5F9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.batch-icon {
  font-size: 32rpx;
  color: #64748B;
}

.batch-controls {
  background: #FEF3C7;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #FDE68A;
}

.batch-info {
  display: flex;
  align-items: center;
}

.batch-count {
  font-size: 26rpx;
  font-weight: bold;
  color: #92400E;
}

.batch-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.margin-input {
  width: 140rpx;
  height: 56rpx;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  border: 2rpx solid #FDE68A;
}

.batch-apply-btn {
  height: 56rpx;
  padding: 0 24rpx;
  background: #D97706;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
}

.batch-cancel-btn {
  height: 56rpx;
  padding: 0 24rpx;
  background: #ffffff;
  color: #64748B;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: 2rpx solid #E2E8F0;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F1F5F9;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #0F172A;
}

.search-icon {
  font-size: 32rpx;
  margin-left: 16rpx;
  opacity: 0.5;
}

.library-tabs {
  display: flex;
  background: #F1F5F9;
  padding: 12rpx;
  margin: 0 30rpx 24rpx;
  border-radius: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #64748B;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #2563EB;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.08);
}

.category-filter {
  margin-bottom: 20rpx;
  background: #ffffff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
  display: flex;
  gap: 12rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  background: #F8FAFC;
  transition: all 0.3s;
  min-width: 100rpx;
}

.category-item.active {
  background: #EFF6FF;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.1);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}

.category-label {
  font-size: 20rpx;
  font-weight: bold;
  color: #334155;
  text-align: center;
}

.category-item.active .category-label {
  color: #2563EB;
}

.basket-float {
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.basket-icon {
  font-size: 40rpx;
}

.basket-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 40rpx;
  height: 40rpx;
  background: #ff4444;
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.sku-list {
  padding: 0 30rpx 30rpx;
}

.sku-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.06);
  border: 1rpx solid #E2E8F0;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.sku-card.batch-mode {
  padding-left: 80rpx;
}

.sku-card:active {
  border-color: #E2E8F0;
}

.batch-checkbox {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #CBD5E1;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #2563EB;
  border-color: #2563EB;
}

.check-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.card-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border-bottom: none;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.attention-badge {
  font-size: 24rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.sku-provider {
  font-size: 20rpx;
  color: #64748B;
  font-weight: 600;
  display: none;
}

.card-body {
  padding: 16rpx;
}

.sku-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 10rpx;
  line-height: 1.35;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sku-type-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 0.5rpx;
}

.type-hotel {
  background: #2563EB;
}

.type-car {
  background: #D1FAE5;
  color: #059669;
}

.type-ticket {
  background: #FEF3C7;
  color: #D97706;
}

.type-guide {
  background: #E9D5FF;
  color: #7C3AED;
}

.type-restaurant {
  background: #FECACA;
  color: #DC2626;
}

.type-activity {
  background: #FED7AA;
  color: #EA580C;
}

.type-itinerary {
  background: #E0E7FF;
  color: #4F46E5;
}

.sku-location {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-icon {
  font-size: 18rpx;
  margin-right: 4rpx;
}

.location-text {
  font-size: 20rpx;
  color: #64748B;
  font-weight: 500;
}

.sku-pricing {
  display: flex;
  gap: 0;
  margin-top: 10rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  justify-content: space-around;
}

.price-item {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  align-items: center;
  flex: 1;
}

.price-label {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.price-value {
  font-size: 24rpx;
  font-weight: 800;
  color: #ffffff;
}

.price-value.cost {
  color: #ffffff;
}

.price-value.sales {
  color: #ffffff;
}

.price-value.margin {
  font-size: 24rpx;
  color: #ffffff;
}

.price-value.margin.good {
  color: #FEF3C7;
}

.price-value.margin.low {
  color: #FEE2E2;
}

.price-edit-input {
  width: 120rpx;
  height: 48rpx;
  background: #ffffff;
  border: 2rpx solid #2563EB;
  border-radius: 8rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #2563EB;
}

.location-text.missing {
  color: #DC2626;
  font-style: italic;
}

.sku-highlights {
  margin-top: 10rpx;
  padding: 10rpx 12rpx;
  background: #F0F9FF;
  border-radius: 8rpx;
  border-left: 3rpx solid #2563EB;
}

.highlight-label {
  font-size: 18rpx;
  color: #64748B;
  font-weight: bold;
  margin-right: 6rpx;
}

.highlight-text {
  font-size: 20rpx;
  color: #334155;
  line-height: 1.4;
}

.card-footer {
  padding: 0 16rpx 16rpx;
  background: #ffffff;
}

.sku-tags {
  display: none;
}

.tag {
  display: none;
}

.card-actions {
  display: none;
}

.btn-action {
  display: none;
}

.btn-edit {
  display: none;
}

.btn-edit:active {
  display: none;
}

.btn-delete {
  display: none;
}

.btn-delete:active {
  display: none;
}

.btn-privacy {
  display: none;
}

.btn-privacy:active {
  display: none;
}

.btn-add {
  display: none;
}

.btn-add:active {
  display: none;
}

.btn-add-primary {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.25);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-add-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.2);
}

/* List View Styles */
.sku-list.list .sku-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.sku-list.list .card-header {
  flex: 0 0 auto;
  padding: 0;
  background: transparent;
  border: none;
  margin-right: 16rpx;
}

.sku-list.list .card-body {
  flex: 1;
  padding: 0;
  margin-right: 16rpx;
}

.sku-list.list .sku-name {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.sku-list.list .sku-pricing {
  flex-direction: row;
  gap: 16rpx;
  margin-top: 8rpx;
}

.sku-list.list .price-item {
  flex-direction: row;
  gap: 8rpx;
  align-items: center;
}

.sku-list.list .price-label {
  font-size: 18rpx;
}

.sku-list.list .price-value {
  font-size: 22rpx;
}

.sku-list.list .card-footer {
  flex: 0 0 auto;
  padding: 0;
  border: none;
  flex-direction: column;
  gap: 8rpx;
}

.sku-list.list .sku-tags {
  display: none;
}

.sku-list.list .card-actions {
  flex-direction: column;
}

.sku-list.list .sku-highlights {
  display: none;
}
