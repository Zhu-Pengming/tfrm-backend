.vendor-edit-container {
  min-height: 100vh;
  background: #F8FAFC;
  display: flex;
  flex-direction: column;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}

.edit-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.vendor-header {
  background: #FFFFFF;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border-bottom: 2rpx solid #F1F5F9;
}

.vendor-logo {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.logo-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.vendor-header-info {
  flex: 1;
  min-width: 0;
}

.vendor-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  display: block;
  margin-bottom: 8rpx;
}

.vendor-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #64748B;
}

.meta-item {
  font-weight: 500;
}

.meta-divider {
  color: #CBD5E1;
}

.vendor-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.vendor-status.active {
  background: #D1FAE5;
  color: #059669;
}

.vendor-status.inactive {
  background: #FEE2E2;
  color: #DC2626;
}

.form-container {
  flex: 1;
  padding: 24rpx 30rpx;
  padding-bottom: 180rpx;
}

.form-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F1F5F9;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 12rpx;
  letter-spacing: 0.3rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #0F172A;
  box-sizing: border-box;
  line-height: 1.6;
  min-height: 72rpx;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #2563EB;
  background: #FFFFFF;
  box-shadow: 0 0 0 3rpx rgba(37, 99, 235, 0.1);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.category-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  transition: all 0.3s;
  cursor: pointer;
  user-select: none;
}

.category-option.selected {
  background: #EFF6FF;
  border-color: #2563EB;
}

.option-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.option-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #334155;
  text-align: center;
}

.category-option.selected .option-label {
  color: #2563EB;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
}

.info-value {
  font-size: 26rpx;
  color: #0F172A;
  font-weight: 500;
}

.form-section-spacer {
  height: 40rpx;
}

.action-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 2rpx solid #F1F5F9;
  padding: 16rpx 30rpx 32rpx;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.btn-delete,
.btn-submit {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s;
}

.btn-delete {
  background: #FEE2E2;
  color: #DC2626;
}

.btn-delete:active {
  background: #FECACA;
  transform: scale(0.98);
}

.btn-submit {
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.35);
}

.btn-submit:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.25);
}
