.detail-container {
  min-height: 100vh;
  background: #f8fafc;
  position: relative;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #94a3b8;
  font-weight: 500;
}

.detail-scroll {
  height: 100vh;
  padding-bottom: 180rpx;
}

/* 顶部大图预览 */
.hero-image {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.hero-img {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(255,255,255,1) 0%, rgba(255,255,255,0.1) 40%, transparent 100%);
}

.hero-content {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  z-index: 10;
}

.hero-badge {
  display: inline-block;
  background: #3b82f6;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}

.badge-text {
  font-size: 20rpx;
  font-weight: 900;
  color: #ffffff;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.hero-title {
  display: block;
  font-size: 44rpx;
  font-weight: 900;
  color: #0f172a;
  line-height: 1.2;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.hero-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-icon {
  font-size: 28rpx;
}

.location-text {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.attention-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(251, 191, 36, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.3);
  z-index: 10;
}

.attention-icon {
  font-size: 28rpx;
}

.attention-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 700;
}

/* 产品描述 */
.description-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border-left: 8rpx solid #3b82f6;
}

.description-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.8;
  font-weight: 500;
  font-style: italic;
}

.price-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  margin: 0 30rpx 24rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.price-edit-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
}

.edit-hint {
  font-size: 24rpx;
  opacity: 0.7;
}

.price-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: 900;
  color: #ffffff;
}

.price-value.cost {
  color: #ffffff;
}

.price-value.sales {
  color: #ffffff;
}

.price-value.margin {
  color: #ffffff;
}

.price-value.margin.low {
  color: #fef3c7;
}

.price-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.2);
}

/* 体验亮点 */
.highlights-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin: 0 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.highlight-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.highlight-icon {
  width: 40rpx;
  height: 40rpx;
  background: #10b981;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 900;
  flex-shrink: 0;
}

.highlight-text {
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 700;
  line-height: 1.5;
}

/* 费用包含/不含 */
.inclusions-section {
  margin: 0 30rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.inclusion-card {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  border: 2rpx solid #6ee7b7;
}

.inclusion-title {
  display: block;
  font-size: 22rpx;
  font-weight: 900;
  color: #065f46;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.inclusion-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.inclusion-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.inclusion-bullet {
  color: #10b981;
  font-size: 32rpx;
  font-weight: 900;
  line-height: 1;
  margin-top: 2rpx;
}

.inclusion-text {
  font-size: 24rpx;
  color: #064e3b;
  font-weight: 700;
  line-height: 1.6;
  flex: 1;
}

.exclusion-card {
  background: linear-gradient(135deg, #fecaca 0%, #fca5a5 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  border: 2rpx solid #f87171;
}

.exclusion-title {
  display: block;
  font-size: 22rpx;
  font-weight: 900;
  color: #7f1d1d;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.exclusion-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.exclusion-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.exclusion-bullet {
  color: #ef4444;
  font-size: 32rpx;
  font-weight: 900;
  line-height: 1;
  margin-top: 2rpx;
}

.exclusion-text {
  font-size: 24rpx;
  color: #7f1d1d;
  font-weight: 700;
  line-height: 1.6;
  flex: 1;
}

/* 服务参数 */
.specs-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin: 0 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.specs-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.spec-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.spec-icon {
  width: 48rpx;
  height: 48rpx;
  background: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.spec-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.spec-label {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.spec-value {
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 700;
}

.spec-edit {
  font-size: 24rpx;
  opacity: 0.4;
}

/* 退款规则 */
.policy-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin: 0 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.policy-card {
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  border-radius: 20rpx;
  padding: 28rpx;
}

.policy-text {
  font-size: 24rpx;
  color: #cbd5e1;
  font-weight: 700;
  line-height: 1.8;
  font-style: italic;
}

.section-title {
  display: block;
  font-size: 24rpx;
  font-weight: 900;
  color: #64748b;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}

.tags-section,
.supplier-section,
.meta-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin: 0 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #eff6ff;
  border: 2rpx solid #bfdbfe;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #1e40af;
  font-weight: 600;
}

.supplier-card {
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.supplier-name {
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 700;
}

.meta-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-label {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 600;
}

.meta-value {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  font-family: monospace;
}

.bottom-spacer {
  height: 40rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.btn-toggle {
  flex: 1;
  height: 80rpx;
  background: #8b5cf6;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
}

.btn-delete {
  flex: 1;
  height: 80rpx;
  background: #ef4444;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
}

.btn-primary {
  flex: 1.5;
  height: 80rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 900;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
}
