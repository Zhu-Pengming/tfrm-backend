.vendor-container {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 120rpx;
}

.header-section {
  background: #ffffff;
  padding: 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.header-top {
  padding: 24rpx 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F1F5F9;
  border-radius: 24rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #0F172A;
}

.search-icon {
  font-size: 32rpx;
  margin-left: 16rpx;
  opacity: 0.5;
}

.btn-add-vendor {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
  padding: 0;
}

.add-icon {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

.category-filter {
  margin-bottom: 20rpx;
  background: #ffffff;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F1F5F9;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
  display: flex;
  gap: 12rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  border-radius: 20rpx;
  background: #F8FAFC;
  transition: all 0.3s;
  min-width: 100rpx;
}

.category-item.active {
  background: #EFF6FF;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.1);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}

.category-label {
  font-size: 20rpx;
  font-weight: bold;
  color: #334155;
  text-align: center;
}

.category-item.active .category-label {
  color: #2563EB;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  background: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.vendor-list {
  padding: 0 30rpx 30rpx;
}

.vendor-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.04);
  border: 2rpx solid #F1F5F9;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F8FAFC;
  border-bottom: 2rpx solid #F1F5F9;
}

.vendor-logo {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.logo-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.vendor-info {
  flex: 1;
  min-width: 0;
}

.vendor-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  display: block;
  margin-bottom: 8rpx;
}

.vendor-contact {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #64748B;
}

.contact-name {
  font-weight: 600;
}

.contact-divider {
  color: #CBD5E1;
}

.contact-phone {
  font-family: monospace;
}

.copy-btn {
  padding: 4rpx 8rpx;
  background: #F1F5F9;
  border-radius: 6rpx;
  margin-left: 4rpx;
}

.copy-icon {
  font-size: 20rpx;
}

.vendor-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.vendor-status.active {
  background: #D1FAE5;
  color: #059669;
}

.vendor-status.inactive {
  background: #FEE2E2;
  color: #DC2626;
}

.card-body {
  padding: 24rpx;
}

.vendor-categories {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.category-badge {
  padding: 6rpx 16rpx;
  background: #EFF6FF;
  color: #2563EB;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 700;
}

.vendor-address {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.address-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.address-text {
  font-size: 22rpx;
  color: #64748B;
  line-height: 1.5;
}

.vendor-rating {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.rating-icon {
  font-size: 24rpx;
}

.rating-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #F59E0B;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: #ffffff;
  border-radius: 32rpx;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #F1F5F9;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #0F172A;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F1F5F9;
  border-radius: 50%;
  font-size: 32rpx;
  color: #64748B;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #0F172A;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.category-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.category-option.selected {
  background: #EFF6FF;
  border-color: #2563EB;
}

.option-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.option-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #334155;
}

.category-option.selected .option-label {
  color: #2563EB;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 2rpx solid #F1F5F9;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
}

.btn-cancel {
  background: #F1F5F9;
  color: #64748B;
}

.btn-submit {
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}
