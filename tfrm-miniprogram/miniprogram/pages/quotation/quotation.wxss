.quotation-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 30rpx;
}

.basket-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.clear-btn {
  font-size: 26rpx;
  color: #ff4444;
}

.basket-list {
  margin-bottom: 24rpx;
}

.basket-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.basket-item:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 24rpx;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  margin-right: 16rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.qty-btn {
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
}

.qty-value {
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999999;
}

.btn-create-quote {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.quotations-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.loading-state,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.quotation-list {
  margin-top: 24rpx;
}

.quotation-card {
  padding: 24rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.quotation-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.quotation-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-right: 16rpx;
}

.quotation-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  white-space: nowrap;
}

.status-draft {
  background: #fff3e0;
  color: #f57c00;
}

.status-published {
  background: #e8f5e9;
  color: #388e3c;
}

.status-archived {
  background: #f5f5f5;
  color: #999999;
}

.quotation-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666666;
}

.quotation-customer {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.quotation-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.btn-edit,
.btn-publish,
.btn-share {
  padding: 12rpx 32rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.btn-edit {
  background: #f5f5f5;
  color: #333333;
}

.btn-publish {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.btn-share {
  background: #4caf50;
  color: #ffffff;
}
