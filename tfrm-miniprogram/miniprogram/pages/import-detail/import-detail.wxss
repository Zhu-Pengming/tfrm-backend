.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-state,
.parsing-state,
.error-state,
.confirmed-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.parsing-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.parsing-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.parsing-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.progress-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #667eea;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.error-icon,
.success-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.error-title,
.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.error-message,
.success-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 60rpx;
  text-align: center;
}

.btn-back,
.btn-view-sku,
.btn-back-list {
  width: 400rpx;
  height: 88rpx;
  background: #667eea;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.parsed-content {
  padding: 20rpx 30rpx 30rpx;
}

.status-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.1);
}

.banner-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.banner-text {
  flex: 1;
}

.banner-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #059669;
  margin-bottom: 6rpx;
}

.banner-desc {
  display: block;
  font-size: 22rpx;
  color: #10B981;
  font-weight: 500;
}

.sku-type-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.fields-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 20rpx;
}

.picker-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  transition: all 0.3s;
}

.picker-value {
  font-size: 28rpx;
  color: #0F172A;
  font-weight: 600;
}

.picker-arrow {
  color: #64748B;
  font-size: 20rpx;
}

.field-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.field-card {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  border: 2rpx solid #E2E8F0;
}

.field-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.field-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.evidence-link {
  font-size: 22rpx;
  color: #2563EB;
  font-weight: 600;
}

.field-input {
  height: 72rpx;
  border: none;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #0F172A;
  font-weight: 500;
}

.field-input.low-confidence {
  border: 2rpx solid #F59E0B;
  background: #FEF3C7;
}

.field-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx 20rpx;
  background: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #334155;
  line-height: 1.8;
  box-sizing: border-box;
}

.field-textarea.low-confidence {
  border: 2rpx solid #F59E0B;
  background: #FEF3C7;
}

.confidence-warning {
  font-size: 24rpx;
  color: #f57c00;
  margin-top: 8rpx;
}

.action-section {
  padding: 0 30rpx 30rpx;
}

.btn-confirm {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 16rpx rgba(37, 99, 235, 0.2);
  transition: all 0.3s;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(37, 99, 235, 0.2);
}

.btn-confirm[disabled] {
  opacity: 0.5;
  transform: none;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
}

.modal-body {
  padding: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.evidence-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}
