.detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-state,
.parsing-state,
.error-state,
.confirmed-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.parsing-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.parsing-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.parsing-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.progress-dots {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: #667eea;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.error-icon,
.success-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.error-title,
.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.error-message,
.success-desc {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 60rpx;
  text-align: center;
}

.btn-back,
.btn-view-sku,
.btn-back-list {
  width: 400rpx;
  height: 88rpx;
  background: #667eea;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.parsed-content {
  padding: 20rpx 30rpx 30rpx;
}

.status-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.1);
}

.banner-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.banner-text {
  flex: 1;
}

.banner-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #059669;
  margin-bottom: 6rpx;
}

.banner-desc {
  display: block;
  font-size: 22rpx;
  color: #10B981;
  font-weight: 500;
}

.sku-type-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.fields-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 20rpx;
}

.picker-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  transition: all 0.3s;
}

.picker-value {
  font-size: 28rpx;
  color: #0F172A;
  font-weight: 600;
}

.picker-arrow {
  color: #64748B;
  font-size: 20rpx;
}

.field-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.field-card {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  border: 2rpx solid #E2E8F0;
}

.field-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.field-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.evidence-link {
  font-size: 22rpx;
  color: #2563EB;
  font-weight: 600;
}

.field-input {
  height: 72rpx;
  border: none;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #0F172A;
  font-weight: 500;
}

.field-input.low-confidence {
  border: 2rpx solid #F59E0B;
  background: #FEF3C7;
}

.field-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx 20rpx;
  background: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #334155;
  line-height: 1.8;
  box-sizing: border-box;
}

.field-textarea.low-confidence {
  border: 2rpx solid #F59E0B;
  background: #FEF3C7;
}

.confidence-warning {
  font-size: 24rpx;
  color: #f57c00;
  margin-top: 8rpx;
}

.action-section {
  padding: 0 30rpx 30rpx;
}

.btn-confirm {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 16rpx rgba(37, 99, 235, 0.2);
  transition: all 0.3s;
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(37, 99, 235, 0.2);
}

.btn-confirm[disabled] {
  opacity: 0.5;
  transform: none;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
}

.modal-body {
  padding: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.evidence-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* AI type detection styles */
.sku-type-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ai-badge {
  font-size: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.picker-field.disabled {
  background: #F1F5F9;
  border-color: #CBD5E1;
  opacity: 0.7;
}

.lock-icon {
  color: #94A3B8;
  font-size: 24rpx;
}

.type-hint {
  display: block;
  font-size: 22rpx;
  color: #64748B;
  margin-top: 12rpx;
  line-height: 1.5;
}

.fields-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.field-item {
  margin-bottom: 20rpx;
}

.evidence-btn {
  font-size: 22rpx;
  color: #2563EB;
  font-weight: 600;
}

/* 分层结构预览样式 */
.structured-preview-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.toggle-btn {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

.preview-card {
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #E2E8F0;
}

.preview-card.core-info {
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%);
  border-color: #93C5FD;
}

.card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.card-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.type-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.type-badge.type-hotel {
  background: #DBEAFE;
  color: #1E40AF;
}

.type-badge.type-car {
  background: #FEF3C7;
  color: #92400E;
}

.type-badge.type-ticket {
  background: #F3E8FF;
  color: #6B21A8;
}

.type-badge.type-guide {
  background: #D1FAE5;
  color: #065F46;
}

.type-badge.type-restaurant {
  background: #FCE7F3;
  color: #9F1239;
}

.type-badge.type-activity {
  background: #FEF3C7;
  color: #78350F;
}

.type-badge.type-itinerary {
  background: #CFFAFE;
  color: #155E75;
}

.location {
  font-size: 24rpx;
  color: #64748B;
}

.preview-card.price-info {
  background: #ffffff;
}

.price-row {
  display: flex;
  gap: 16rpx;
}

.price-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
}

.price-label {
  font-size: 22rpx;
  color: #64748B;
  margin-bottom: 8rpx;
}

.price-value {
  font-size: 28rpx;
  font-weight: 700;
}

.price-value.cost {
  color: #DC2626;
}

.price-value.sales {
  color: #059669;
}

.price-value.margin {
  color: #2563EB;
}

.preview-card.highlights {
  background: #ffffff;
}

.card-title {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.bullet {
  color: #667eea;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1.5;
}

.highlight-text {
  flex: 1;
  font-size: 24rpx;
  color: #334155;
  line-height: 1.6;
}

.preview-card.category-attrs {
  background: linear-gradient(135deg, #1E293B 0%, #0F172A 100%);
  color: #ffffff;
}

.preview-card.category-attrs .card-title {
  color: #F1F5F9;
}

.attrs-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.attr-item {
  display: flex;
  flex-direction: column;
}

.attr-label {
  font-size: 20rpx;
  color: #94A3B8;
  margin-bottom: 6rpx;
  text-transform: uppercase;
}

.attr-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #F8FAFC;
}

.preview-row {
  display: flex;
  gap: 16rpx;
}

.preview-row .preview-card {
  flex: 1;
}

.preview-card.inclusions {
  background: #ECFDF5;
  border-color: #6EE7B7;
}

.preview-card.inclusions .card-title {
  color: #065F46;
}

.preview-card.exclusions {
  background: #FEF3C7;
  border-color: #FCD34D;
}

.preview-card.exclusions .card-title {
  color: #92400E;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item {
  font-size: 22rpx;
  color: #334155;
  line-height: 1.5;
}

.preview-card.policy {
  background: #FEF3C7;
  border-color: #FCD34D;
}

.preview-card.policy .card-title {
  color: #92400E;
}

.policy-text {
  font-size: 24rpx;
  color: #78350F;
  line-height: 1.6;
}

.pricing-details-section,
.raw-data-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #E2E8F0;
}

.pricing-content {
  margin-top: 16rpx;
}

.pricing-table {
  background: #F8FAFC;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.table-title {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 16rpx;
}

.room-item,
.dining-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.room-item:last-child,
.dining-item:last-child {
  border-bottom: none;
}

.room-name,
.dining-type {
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
}

.room-breakfast {
  font-size: 22rpx;
  color: #059669;
  background: #D1FAE5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.raw-data-content {
  margin-top: 16rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
  padding: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.raw-data-text {
  font-size: 22rpx;
  color: #334155;
  font-family: monospace;
  line-height: 1.6;
  word-break: break-all;
}
