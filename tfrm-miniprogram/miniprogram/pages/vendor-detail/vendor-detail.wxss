.vendor-detail-container {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 40rpx;
}

.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.vendor-logo-large {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  flex-shrink: 0;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.vendor-header-info {
  flex: 1;
  min-width: 0;
}

.vendor-name {
  font-size: 44rpx;
  font-weight: 900;
  color: #ffffff;
  display: block;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.vendor-status {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.vendor-status.active {
  background: rgba(209, 250, 229, 0.9);
  color: #059669;
}

.vendor-status.inactive {
  background: rgba(254, 226, 226, 0.9);
  color: #DC2626;
}

.vendor-rating {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.rating-icon {
  font-size: 24rpx;
}

.rating-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}

.detail-section {
  background: #ffffff;
  margin: 20rpx 30rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 900;
  color: #0F172A;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F1F5F9;
}

.info-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 22rpx;
  font-weight: 700;
  color: #64748B;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
}

.info-value-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.copy-btn {
  padding: 8rpx 16rpx;
  background: #F1F5F9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.copy-icon {
  font-size: 24rpx;
}

.address-box {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 24rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  border: 2rpx solid #E2E8F0;
}

.address-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.address-text {
  font-size: 26rpx;
  color: #334155;
  line-height: 1.6;
  flex: 1;
}

.categories-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.category-item {
  padding: 16rpx 24rpx;
  background: #EFF6FF;
  border: 2rpx solid #BFDBFE;
  border-radius: 16rpx;
}

.category-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #2563EB;
}

.specialties-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.specialty-tag {
  padding: 12rpx 20rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #64748B;
}

.notes-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #0F172A;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.btn-save-notes {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #2563EB 0%, #1D4ED8 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
}

.action-section {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-edit,
.btn-delete {
  width: 100%;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 700;
  border: none;
}

.btn-edit {
  background: #F1F5F9;
  color: #475569;
}

.btn-delete {
  background: #FEE2E2;
  color: #DC2626;
}

.loading-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8FAFC;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E2E8F0;
  border-top-color: #2563EB;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
}
