.success-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.success-content {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.success-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.success-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
}

.share-section {
  margin-bottom: 60rpx;
}

.share-item {
  margin-bottom: 40rpx;
}

.share-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  text-align: left;
}

.share-url-box {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.share-url {
  font-size: 24rpx;
  color: #667eea;
  line-height: 1.6;
}

.btn-copy {
  width: 100%;
  height: 72rpx;
  background: #667eea;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.qrcode-section {
  margin-top: 40rpx;
}

.qrcode-placeholder {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #e0e0e0;
}

.qrcode-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.qrcode-hint {
  font-size: 22rpx;
  color: #999999;
  padding: 0 40rpx;
  text-align: center;
  word-break: break-all;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.btn-view-quotation,
.btn-back-list {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-view-quotation {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.btn-back-list {
  background: #f5f5f5;
  color: #333333;
}

.tips-section {
  background: #f8f9ff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: left;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}
