.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

.login-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: pulse 8s ease-in-out infinite;
}

.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
  z-index: 1;
}

.logo-icon {
  font-size: 100rpx;
  margin-bottom: 16rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.logo-title {
  display: block;
  font-size: 56rpx;
  font-weight: 900;
  color: #0F172A;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.logo-subtitle {
  display: block;
  font-size: 22rpx;
  color: #64748B;
  letter-spacing: 1rpx;
}

.form-section {
  width: 100%;
  background: #ffffff;
  border-radius: 48rpx;
  padding: 0;
  box-shadow: 0 20rpx 60rpx rgba(15, 23, 42, 0.08);
  overflow: hidden;
  z-index: 1;
  backdrop-filter: blur(10rpx);
}

.tab-switch {
  display: flex;
  background: #F1F5F9;
  padding: 8rpx;
  border-radius: 32rpx;
  margin: 48rpx 40rpx 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #64748B;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #2563EB;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.1);
}

.form-content {
  padding: 0 40rpx 48rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #334155;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-field {
  flex: 1;
  height: 88rpx;
  padding: 0 32rpx;
  background: #ffffff;
  border: 2rpx solid #E2E8F0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #0F172A;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #2563EB;
  background: #F8FAFC;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.1);
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  padding: 8rpx;
  cursor: pointer;
}

.toggle-icon {
  font-size: 36rpx;
  opacity: 0.6;
}

.error-message {
  background: #FEF2F2;
  border: 2rpx solid #FECACA;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
}

.error-message text {
  font-size: 24rpx;
  color: #DC2626;
  font-weight: 500;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background: #2563EB;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 24rpx;
  border: none;
  margin-top: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary[disabled] {
  opacity: 0.5;
  transform: none;
}

.footer-text {
  margin-top: 32rpx;
  text-align: center;
}

.footer-text text {
  font-size: 20rpx;
  color: #94A3B8;
}

.mode-switch {
  text-align: center;
  margin-top: 40rpx;
  font-size: 28rpx;
}

.switch-text {
  color: #6b7280;
  font-weight: 400;
}

.link-text {
  color: #6366f1;
  margin-left: 8rpx;
  font-weight: 600;
  text-decoration: underline;
  text-underline-offset: 4rpx;
}
