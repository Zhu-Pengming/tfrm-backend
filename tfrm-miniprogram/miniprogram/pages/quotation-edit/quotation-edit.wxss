.edit-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.edit-content {
  padding: 30rpx;
}

.form-section,
.items-section,
.summary-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input[disabled] {
  background: #f5f5f5;
  color: #999999;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.empty-items {
  padding: 80rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-right: 16rpx;
}

.item-remove {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ff4444;
}

.item-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
}

.detail-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.detail-value.total {
  color: #667eea;
  font-size: 32rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.qty-btn {
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
}

.qty-value {
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.summary-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.summary-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
}

.action-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx;
}

.btn-save,
.btn-edit,
.btn-publish {
  width: 100%;
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-save {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.btn-save[disabled] {
  opacity: 0.6;
}

.btn-edit {
  background: #f5f5f5;
  color: #333333;
}

.btn-publish {
  background: #4caf50;
  color: #ffffff;
}
